{
    "name": "antigravity-markdown-preview",
    "displayName": "Antigravity Markdown Preview",
    "description": "Enhanced Markdown Preview with themes, custom containers, and export capabilities.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:markdown"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "antigravity.openPreview",
                "title": "Antigravity: Open Preview to the Side",
                "icon": "$(preview)"
            },
            {
                "command": "antigravity.exportToPdf",
                "title": "Antigravity: Export to PDF"
            },
            {
                "command": "antigravity.exportToWord",
                "title": "Antigravity: Export to Word (.docx)"
            },
            {
                "command": "antigravity.exportToHtml",
                "title": "Antigravity: Export to HTML (Select Mode)"
            },
            {
                "command": "antigravity.exportToHtmlFolder",
                "title": "Antigravity: Export to HTML (Folder)"
            },
            {
                "command": "antigravity.exportToHtmlBase64",
                "title": "Antigravity: Export to HTML (Base64)"
            },
            {
                "command": "antigravity.setTheme",
                "title": "Antigravity: Set Theme"
            },
            {
                "command": "antigravity.editCustomCss",
                "title": "Antigravity: Edit Custom CSS"
            },
            {
                "command": "antigravity.startSlideshow",
                "title": "Antigravity: Start Slideshow",
                "icon": "$(play)"
            },
            {
                "command": "antigravity.startSlideshowInNewWindow",
                "title": "Antigravity: 別ウィンドウでスライド起動",
                "icon": "$(empty-window)"
            },
            {
                "command": "antigravity.exportSlideshowToHtml",
                "title": "Antigravity: スライド出力 (Standalone HTML)",
                "icon": "$(save-as)"
            },
            {
                "command": "antigravity.toggleLiveUpdate",
                "title": "Antigravity: 自動更新を切り替え",
                "icon": "$(sync)"
            }
        ],
        "configuration": {
            "title": "Antigravity Markdown",
            "properties": {
                "antigravity.preview.theme": {
                    "type": "string",
                    "default": "Default",
                    "enum": [
                        "Default",
                        "Technical",
                        "Manuscript"
                    ],
                    "description": "Select the theme for Markdown preview."
                }
            }
        },
        "markdown.markdownItPlugins": true,
        "markdown.previewStyles": [
            "./media/main.css",
            "./media/menu.css",
            "./media/reset.css",
            "./media/theme-tech.css",
            "./media/theme-manuscript.css"
        ],
        "markdown.previewScripts": [
            "./media/antigravity.js"
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "antigravity.exportToPdf",
                    "when": "editorLangId == markdown",
                    "group": "antigravity"
                },
                {
                    "command": "antigravity.exportToWord",
                    "when": "editorLangId == markdown",
                    "group": "antigravity"
                },
                {
                    "command": "antigravity.exportToHtmlFolder",
                    "when": "editorLangId == markdown",
                    "group": "antigravity"
                },
                {
                    "command": "antigravity.exportToHtmlBase64",
                    "when": "editorLangId == markdown",
                    "group": "antigravity"
                },
                {
                    "command": "antigravity.exportSlideshowToHtml",
                    "when": "editorLangId == markdown",
                    "group": "antigravity"
                }
            ],
            "editor/title": [
                {
                    "command": "antigravity.openPreview",
                    "when": "editorLangId == markdown",
                    "group": "navigation"
                },
                {
                    "command": "antigravity.startSlideshow",
                    "when": "editorLangId == markdown",
                    "group": "navigation@1"
                },
                {
                    "command": "antigravity.startSlideshowInNewWindow",
                    "when": "editorLangId == markdown",
                    "group": "navigation@2"
                },
                {
                    "command": "antigravity.exportSlideshowToHtml",
                    "when": "editorLangId == markdown",
                    "group": "navigation@3"
                },
                {
                    "command": "antigravity.exportToPdf",
                    "when": "editorLangId == markdown && !isInEmbeddedEditor",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/markdown-it": "^14.1.2",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "html-docx-js-typescript": "^0.1.5",
        "markdown-it": "^14.1.0",
        "markdown-it-container": "^3.0.0",
        "puppeteer-core": "^21.0.0"
    }
}