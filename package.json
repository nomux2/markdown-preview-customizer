{
    "name": "markdown-preview-customizer",
    "displayName": "Markdown Preview Customizer",
    "description": "%description%",
    "version": "0.1.2",
    "publisher": "local",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:markdown"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "markdownPreviewCustomizer.openPreview",
                "title": "%command.openPreview.title%",
                "icon": "$(preview)"
            },
            {
                "command": "markdownPreviewCustomizer.exportToPdf",
                "title": "%command.exportToPdf.title%"
            },
            {
                "command": "markdownPreviewCustomizer.exportToWord",
                "title": "%command.exportToWord.title%"
            },
            {
                "command": "markdownPreviewCustomizer.exportToHtml",
                "title": "%command.exportToHtml.title%"
            },
            {
                "command": "markdownPreviewCustomizer.exportToHtmlFolder",
                "title": "%command.exportToHtmlFolder.title%"
            },
            {
                "command": "markdownPreviewCustomizer.exportToHtmlBase64",
                "title": "%command.exportToHtmlBase64.title%"
            },
            {
                "command": "markdownPreviewCustomizer.setTheme",
                "title": "%command.setTheme.title%"
            },
            {
                "command": "markdownPreviewCustomizer.editCustomCss",
                "title": "%command.editCustomCss.title%"
            },
            {
                "command": "markdownPreviewCustomizer.startSlideshow",
                "title": "%command.startSlideshow.title%",
                "icon": "$(play)"
            },
            {
                "command": "markdownPreviewCustomizer.startSlideshowInNewWindow",
                "title": "%command.startSlideshowInNewWindow.title%",
                "icon": "$(empty-window)"
            },
            {
                "command": "markdownPreviewCustomizer.exportSlideshowToHtml",
                "title": "%command.exportSlideshowToHtml.title%",
                "icon": "$(save-as)"
            },
            {
                "command": "markdownPreviewCustomizer.toggleLiveUpdate",
                "title": "%command.toggleLiveUpdate.title%",
                "icon": "$(sync)"
            }
        ],
        "configuration": {
            "title": "Markdown Preview Customizer",
            "properties": {
                "markdownPreviewCustomizer.theme": {
                    "type": "string",
                    "default": "Default",
                    "enum": [
                        "Default",
                        "Trust",
                        "Modern-v2",
                        "Modern",
                        "Simple",
                        "Nordic",
                        "Fresh",
                        "Warm",
                        "Minimal",
                        "Professional",
                        "Elegant",
                        "Classic",
                        "Pop",
                        "Corporate",
                        "Report",
                        "Minutes",
                        "Minutes-simple",
                        "Proposal",
                        "Proposal-simple",
                        "Contract",
                        "Invoice",
                        "Manual",
                        "Specification",
                        "Executive",
                        "Financial",
                        "Presentation",
                        "Whiteboard",
                        "Impact",
                        "Keynote",
                        "Pitch",
                        "Conference",
                        "Workshop",
                        "Seminar",
                        "Training",
                        "Demo",
                        "Tech",
                        "Tech-clean",
                        "Tech-formal",
                        "Tech-manual",
                        "Manuscript",
                        "Terminal",
                        "Neon",
                        "Newspaper",
                        "Cute",
                        "Custom"
                    ],
                    "description": "%config.theme.description%"
                },
                "markdownPreviewCustomizer.showDebugLog": {
                    "type": "boolean",
                    "default": false,
                    "description": "%config.showDebugLog.description%"
                }
            }
        },
        "markdown.markdownItPlugins": true,
        "markdown.previewStyles": [
            "./media/main.css",
            "./media/menu.css",
            "./media/reset.css",
            "./media/theme-tech.css",
            "./media/theme-manuscript.css"
        ],
        "markdown.previewScripts": [
            "./media/preview-customizer.js"
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "markdownPreviewCustomizer.exportToPdf",
                    "when": "editorLangId == markdown",
                    "group": "markdownPreview"
                },
                {
                    "command": "markdownPreviewCustomizer.exportToWord",
                    "when": "editorLangId == markdown",
                    "group": "markdownPreview"
                },
                {
                    "command": "markdownPreviewCustomizer.exportToHtmlFolder",
                    "when": "editorLangId == markdown",
                    "group": "markdownPreview"
                },
                {
                    "command": "markdownPreviewCustomizer.exportToHtmlBase64",
                    "when": "editorLangId == markdown",
                    "group": "markdownPreview"
                },
                {
                    "command": "markdownPreviewCustomizer.exportSlideshowToHtml",
                    "when": "editorLangId == markdown",
                    "group": "markdownPreview"
                }
            ],
            "editor/title": [
                {
                    "command": "markdownPreviewCustomizer.openPreview",
                    "when": "editorLangId == markdown",
                    "group": "navigation"
                },
                {
                    "command": "markdownPreviewCustomizer.startSlideshow",
                    "when": "editorLangId == markdown",
                    "group": "navigation@1"
                },
                {
                    "command": "markdownPreviewCustomizer.startSlideshowInNewWindow",
                    "when": "editorLangId == markdown",
                    "group": "navigation@2"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/markdown-it": "^14.1.2",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "@traptitech/markdown-it-katex": "^3.6.0",
        "@types/highlight.js": "^9.12.4",
        "highlight.js": "^11.11.1",
        "html-docx-js-typescript": "^0.1.5",
        "katex": "^0.16.27",
        "markdown-it": "^14.1.0",
        "markdown-it-container": "^3.0.0",
        "puppeteer-core": "^21.0.0",
        "vscode-nls": "^5.2.0"
    }
}